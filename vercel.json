{
  "version": 2,
  "builds": [
    { "src": "dist/index.js",      "use": "@vercel/node"   },
    { "src": "dist_public/**",      "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)",           "dest": "dist/index.js" },
    { "src": "/(.*)",               "dest": "dist_public/$1" }
  ]
}
