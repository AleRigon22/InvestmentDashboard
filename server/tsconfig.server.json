{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "outDir": "../dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "./db.ts",
    "./routes.ts",
    "./server.ts",
    "./storage.ts"
  ],
  "exclude": [
    "./__tests__",
    "./vite.ts"
  ]
}
