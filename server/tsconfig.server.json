{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "outDir": "../dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["node"],
	"typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "./__tests__",
    "./dev/**",
    "../vite.config.ts"
  ]
}