{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "outDir": "../dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },

    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },


  "include": [
    "./db.ts",
    "./routes.ts",
    "./index.ts",
    "./storage.ts",
  ],


  "exclude": [
    "./__tests__",
    "./dev/**",
    "./vite.ts",
    "../vite.config.ts"
  ]
}
