{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "server/dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["./__tests__"]
}
